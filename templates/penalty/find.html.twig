{% extends 'base.html.twig' %}

{% block title %}Penalty find {{ string }}{% endblock %}

{% block body %}
    <h1>Penalty  find {{ string }} </h1>

    <table class="table">
        <thead>
        <tr>
            <th>Amount</th>
            <th>Cause</th>
            <th>NumberCar</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for penalty in penalties %}
            <tr>
                <td>{{ penalty.amount }}</td>
                <td>{{ penalty.cause }}</td>
                <td>{{ penalty.numCar }}</td>
                <td>
                    <a href="{{ path('penalty_show', {'id': penalty.id}) }}">show</a>
                    <a href="{{ path('penalty_edit', {'id': penalty.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
